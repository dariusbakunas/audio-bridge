{
  "productName": "Audio Hub",
  "version": "0.1.0",
  "identifier": "com.audiohub.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Audio Hub",
        "width": 1280,
        "height": 800
      }
    ],
    "security": {
      "csp": "default-src 'self' data: blob:; connect-src 'self' http: https: ws: wss:; img-src 'self' data: blob: http: https:; media-src 'self' data: blob: http: https:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval';"
    }
  }
  ,
  "bundle": {
    "active": true,
    "macOS": {
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "targets": [
      "dmg",
      "app",
      "msi",
      "nsis",
      "deb",
      "appimage"
    ],
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
